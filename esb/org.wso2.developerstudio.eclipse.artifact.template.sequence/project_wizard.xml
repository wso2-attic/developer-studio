<?xml version="1.0" encoding="UTF-8"?>
<wizard>
	<projectOptions title="Template Artifact Creation Options"
					description="Select type of your new template"
					error="Please select a method to create a template">
		<option id="tempate" default="true">Create a New Template</option>
		<option id="import.template">Import a Template</option>	
</projectOptions>
	<projectOptionSettings>
		<settings optionId="tempate"
				  title="Template Artifact"
				  description="Create a new Template Artifact"
				  error="Create a template">
			<data modelProperty="temp.name" type="string" 
			fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">Template Name</data>	
		
			<data modelProperty="temp.type" type="list" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController"  
			controlData="select=single;modify=non-editable;class=org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateList">Template Type</data>
			
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController" 
			controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.template.validators.ProjectFilter">Save template in:</data>	
			<data modelProperty="create.esb.prj" type="link" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>
			
			<!-- Address EP -->
			<data group="group1" modelProperty="templ.address.ep.uri" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">Address</data>
			
			<!-- WSDL EP -->
			<data group="group1" modelProperty="templ.wsdl.ep.uri" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">WSDL URI</data>
			<data group="group1" modelProperty="templ.wsdl.ep.service" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">Service</data>
			<data group="group1" modelProperty="templ.wsdl.ep.port" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">Port</data>
			
			<!-- HTTP EP -->
			<data group="group1" modelProperty="templ.http.ep.uritemplate" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">URI Template</data>
			<data group="group1" modelProperty="templ.http.ep.method" type="list" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController" controlData="select=single;modify=non-editable;class=org.wso2.developerstudio.eclipse.artifact.template.validators.HttpMethodList">Method</data>
			
			
		   <group id="group1" title="Advance Configuration" controlData="type=collapsible;state=expanded"></group>
		</settings>
		<settings optionId="import.template"
				  title="Template Artifact"
				  description="Create a new Template Artifact using a configuration file"
				  error="Browse a template">
			
			<data modelProperty="import.file" type="file" filter="*.xml" 
			fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController">Template</data>		
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController" 
			controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.template.validators.ProjectFilter">Save Template in:</data>		
			<data modelProperty="create.esb.prj" type="link" fieldController="org.wso2.developerstudio.eclipse.artifact.template.validators.TemplateProjectFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>
		</settings>
	</projectOptionSettings>
</wizard>
