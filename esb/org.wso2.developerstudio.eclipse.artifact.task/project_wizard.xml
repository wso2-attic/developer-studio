<wizard>
	<projectOptions title="Scheduled Task Artifact"
		description="Create a new Scheduled Task Artifact"
		error="Please select a method to create the task">
		<option id="create.task" default="true">Create A New Scheduled Task Artifact</option>
		<option id="import.task">Import Scheduled Task Artifact</option>
	</projectOptions>
	<projectOptionSettings>
		<settings optionId="create.task" title="Create A New Task Artifact"
			description="Give a name for the task" error="Please give a name and a group for the task">
			<data modelProperty="task.name" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController">Task Name*</data>
			<data modelProperty="task.group" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController">Task Group*</data>
			<data modelProperty="task.impl" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController">Task Implementation*</data>
			<group id ="trigger.info" title="Trigger Information of the Task"/>		
			<data modelProperty="trigger.type" 
				type="list" 
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"  
				controlData="select=single;modify=non-editable;class=org.wso2.developerstudio.eclipse.artifact.task.validator.TriggerTypeList"
				group="trigger.info">Trigger Type                 </data>
			<data modelProperty="task.count" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"
				group="trigger.info">Count</data>
			<data modelProperty="task.interval" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"
				group="trigger.info">Interval (in seconds)*</data>
			<data modelProperty="task.cron" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"
				group="trigger.info">Cron*</data>
			<data modelProperty="task.pinned.svr" type="string"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController">Pinned Servers</data>	
			<group id ="location"/>	
			<data modelProperty="save.location" type="workspacefolder"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"
				group="location"
				controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.task.validator.ESBProjectFilter">Save location:</data>
			<data modelProperty="create.esb.prj" type="link"
				fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController"
				group="location"
				controlData="align=right">&lt;a&gt;Create a new ESB project...&lt;/a&gt;</data>
		</settings>
		<settings optionId="import.task" 
				  title="Scheduled Task Artifact" 
				  description="Create a new Scheduled Task Artifact using a configuration file with Scheduled Task defined" 
				  error="Browse and select a Sheduled Task configuration file">
			<data modelProperty="import.file" type="file" filter="*.xml" fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController">Scheduled Task Configuration File</data>
			<data modelProperty="save.location" type="workspacefolder" fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController" 
			controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.task.validator.ESBProjectFilter" >Save Task in: </data>
			<data modelProperty="create.esb.prj" type="link" fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController" 
			controlData="align=right" >&lt;a&gt;Create new Project...&lt;/a&gt;</data>
			<data modelProperty="available.tasks" type="list" fieldController="org.wso2.developerstudio.eclipse.artifact.task.validator.ProjectFieldController" 
			controlData="select=multiple;selectAllbtn=true;modify=non-editable;class=org.wso2.developerstudio.eclipse.artifact.task.validator.TasksList">Available Scheduled Tasks</data>
		</settings>
	</projectOptionSettings>
</wizard>