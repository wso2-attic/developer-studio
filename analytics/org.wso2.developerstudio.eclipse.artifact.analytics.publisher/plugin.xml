<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.newWizards">
         <wizard name="Publisher" 
         	category="org.wso2.developerstudio.eclipse.capp.project/org.wso2.developerstudio.eclipse.artifact.analytics.category"
			class="org.wso2.developerstudio.eclipse.artifact.analytics.publisher.ui.wizard.PublisherProjectCreationWizard"
			wizardManifest="project_wizard.xml"
			id="org.wso2.developerstudio.eclipse.artifact.newpublisherartifact"
			icon="icons/publisher-16x16.png">
			<description>Publisher</description>
		</wizard>
         <category
               id="org.wso2.developerstudio.eclipse.artifact.analytics.publisher.category"
               name="Publisher"
               parentCategory="org.wso2.developerstudio.eclipse.capp.project">
         </category>
   </extension>
	 
	<extension point="org.eclipse.ui.navigator.navigatorContent">    
            <commonWizard type="new"
                menuGroupId="2org.wso2.developerstudio.eclipse.artifact.analytics"
                wizardId="org.wso2.developerstudio.eclipse.artifact.newpublisherartifact">
                <enablement>
                    <or>
                        <adapt type="org.eclipse.core.resources.IProject">
                            <test property="org.eclipse.core.resources.projectNature"
                                value="org.wso2.developerstudio.eclipse.artifact.analytics.project.nature" />
                                </adapt>
                       <adapt type="org.eclipse.jdt.core.IPackageFragment">
							<test property="org.wso2.developerstudio.projectNature"
								value="org.wso2.developerstudio.eclipse.artifact.analytics.project.nature" />
						</adapt>
						<adapt type="org.eclipse.core.resources.IFolder">  
						   <test
                       forcePluginActivation="true"
                       property="org.eclipse.core.resources.name"
                       value="publisher">
                     </test>                        
						</adapt>
                    </or>
                </enablement>   
            </commonWizard>
    </extension>
    
    <extension
       point="org.eclipse.ltk.core.refactoring.renameParticipants">
       <renameParticipant
			class="org.wso2.developerstudio.eclipse.artifact.analytics.publisher.refactor.CommonRenameRefactorParticipant"
			id="PublisherRenameRefactorParticipant"
			name="PublisherRenameRefactor">
				<enablement>
					<and>
							<instanceof
								value="org.eclipse.core.resources.IFile">
							</instanceof>
						<adapt type="org.eclipse.core.resources.IResource">
             				<test
                   				property="org.eclipse.core.resources.projectNature"
                   				value="org.wso2.developerstudio.eclipse.artifact.analytics.project.nature">
             				</test>
         				</adapt>
					</and>
				</enablement>
		</renameParticipant>
 </extension>
 <extension
         point="org.eclipse.ltk.core.refactoring.deleteParticipants">
       <deleteParticipant
			class="org.wso2.developerstudio.eclipse.artifact.analytics.publisher.refactor.CommonArtifactDeleteParticipant"
			id="PublisherArtifactDeleteParticipant"
			name="PublisherArtifactDeleteParticipantRefactor">
				<enablement>
					<and>
							<instanceof
								value="org.eclipse.core.resources.IFile">
							</instanceof>
						<adapt type="org.eclipse.core.resources.IResource">
             				<test
                   				property="org.eclipse.core.resources.projectNature"
                   				value="org.wso2.developerstudio.eclipse.artifact.analytics.project.nature">
             				</test>
         				</adapt>
					</and>
				</enablement>
		</deleteParticipant>
   </extension>
</plugin>
