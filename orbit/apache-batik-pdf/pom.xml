<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
	<groupId>org.wso2.developerstudio</groupId>
	<artifactId>developer-studio-orbit-parent</artifactId>
    	<version>3.7.1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.xmlgraphics</groupId>
    <artifactId>org.apache.batik.pdf</artifactId>
    <packaging>bundle</packaging>
    <name>org.apache.batik.pdf.wso2</name>
    <version>1.6.0.v200806031500.wso2v2-SNAPSHOT</version>
    <description>
        org.apache.batik.pdf. This bundle will export selected set of packages from org.apache.batik.pdf.jar
    </description>
    <url>http://wso2.org</url>

    <!--dependencies>
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>org.apache.batik.pdf</artifactId>
            <version>1.6.0.v200806031500</version>
        </dependency>
    </dependencies-->

    <build>
        <plugins>
       <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-dependency-plugin</artifactId>
         <version>2.4</version>
         <executions>
           <execution>
             <id>unpack</id>
             <phase>compile</phase>
             <goals>
               <goal>unpack</goal>
             </goals>
             <configuration>
               <artifactItems>
                 <artifactItem>
  		<groupId>org.apache.xmlgraphics</groupId>
            	<artifactId>org.apache.batik.pdf</artifactId>
            	<version>1.6.0.v200806031500</version>
                   <type>jar</type>
                   <overWrite>true</overWrite>
		   <outputDirectory>${project.build.directory}/classes</outputDirectory>
                   <includes>**/*.class,**/*.xml,**/*.properties,**/*.html,**/*.inf</includes>
                   <excludes>**/*.SF,**/*.RSA</excludes>
                 </artifactItem>
               </artifactItems>
             </configuration>
           </execution>
         </executions>
       </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
			<Import-Package>!org.apache.avalon.*,!org.apache.fop.*,!org.apache.log.*,*</Import-Package>
 			<Export-Package>
                            !org.apache.commons.*,*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
