<?xml version="1.0" encoding="UTF-8"?>
<wizard>
	<projectOptions title="Execution-plan Artifact Creation Options" 
					description="Select how you would like to create your new Execution-plan artifact" 
					error="Please select a method to create the Execution-plan  artifact">
		<option id="new.execution_plan" default="true">Create New Execution-plan</option>
		<option id="import.execution_plan">Import Execution-plan </option>
	</projectOptions>
	<projectOptionSettings>
		<settings optionId="new.execution_plan" 
				  title="Execution-plan Artifact" 
				  description="Create a new Execution-plan Artifact" 
				  error="Please give a name for the Execution-plan">
				  
			<data modelProperty="project.name" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController">Execution-plan Name    </data>
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController" controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planProjectFilter">Save Execution-plan in:</data>
			<data modelProperty="create.cep.prj" type="link" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController" controlData="align=right">&lt;a&gt;Create new Project...&lt;/a&gt;</data>
		
		</settings>
		
		<settings optionId="import.execution_plan" 
				  title="Execution-plan Artifact" 
				  description="Create a Execution-plan Artifact using a configuration file with Execution-plan defined" 
				  error="Browse and select a Eventexecution_plan configuration file">
			
			<data modelProperty="import.file" type="file" filter="*.siddhiql" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController">Execution-plan Configuration File</data>
			<data modelProperty="save.file" type="workspacefolder" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController" controlData="filterClass=org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planProjectFilter" >Save Execution-plan in: </data>
			<data modelProperty="create.cep.prj" type="link" fieldController="org.wso2.developerstudio.eclipse.artifact.cep.execution_plan.validators.Execution_planFieldController" controlData="align=right" >&lt;a&gt;Create new Project...&lt;/a&gt;</data>
			
		</settings>
	</projectOptionSettings>
</wizard>