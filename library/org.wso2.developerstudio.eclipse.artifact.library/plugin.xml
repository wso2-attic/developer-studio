<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
         <wizard name="Java Library Project" 
         	category="org.wso2.developerstudio.eclipse.capp.project/org.wso2.developerstudio.eclipse.extensions/org.wso2.developerstudio.eclipse.extensions.project.types"
			class="org.wso2.developerstudio.eclipse.artifact.library.ui.wizard.LibraryArtifactCreationWizard"
			wizardManifest="project_wizard.xml"
			project="true"
			id="org.wso2.developerstudio.eclipse.artifact.newlibraryartifact"
			icon="icons/jar-16x16.png">
			<description>Java Library Project</description>
		</wizard>
   </extension>
	 
  <extension point="org.eclipse.ui.menus">
   <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     <command commandId="AddRemoveJavaLibsMenuCommandID" style="push">
        <visibleWhen>
        	<iterate>
                <adapt type="org.eclipse.core.resources.IProject">
                	<!-- here nature ID need to give as value not the class -->
                   <test property="org.eclipse.core.resources.projectNature" 
                   value="org.wso2.developerstudio.eclipse.library.project.nature"/>
                </adapt>
              </iterate>
        </visibleWhen>
     </command>
   </menuContribution>
  </extension>
  
  <extension point="org.eclipse.ui.commands">
	    <command
	        description="Add new Java libraries"
	        id="AddRemoveJavaLibsMenuCommandID"
	        name="Add/Remove Java Libraries">
	  	</command>
  </extension>
 
  <extension point="org.eclipse.ui.handlers">
	    <handler
	        class="org.wso2.developerstudio.eclipse.artifact.library.ui.menu.AddRemoveJavaLibsMenuHandler"
	        commandId="AddRemoveJavaLibsMenuCommandID">
	  		</handler>
  </extension>
	 
     
   <extension point="org.eclipse.core.resources.natures"
		id="org.wso2.developerstudio.eclipse.library.project.nature" name="Java Library Project Nature">
		<runtime>
			<run
				class="org.wso2.developerstudio.eclipse.artifact.library.project.nature.LibraryArtifactProjectNature">
			</run>
		</runtime>
	</extension>
	<extension point="org.eclipse.ui.ide.projectNatureImages">
		<image id="org.wso2.developerstudio.eclipse.library.project.natureImage"
			natureId="org.wso2.developerstudio.eclipse.library.project.nature" icon="icons/jar-12x12.png">
		</image>
	</extension>
	
